<%= form_with model: appointment, id: dom_id(appointment), url: doctors_appointment_path(appointment), data: { turbo_frame: dom_id(appointment), turbo_method: :patch } do |f| %>
  <% if appointment.errors.any? %>
    <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= f.text_area :recommendation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
  <div class="flex items-center justify-between">
    <%= f.submit 'Give recommendation', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
<div class="flex items-center justify-between">
  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    <%= link_to 'Back', :back %>
  </button>
</div>

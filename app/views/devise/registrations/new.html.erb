<div class="h-screen flex flex-col items-center">
  <h2> <%= t('navigation.sign_up') %> </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb4">
      <%= f.label :phone, class: "text-gray-700 font-bold mb-2" %><br />
      <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>

    <div class="mb4">
      <%= f.label :full_name, class: "text-gray-700 font-bold mb-2" %><br />
      <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>

    <div class="mb6">
      <%= f.label :password, class: "text-gray-700 font-bold mb-2" %>
      <% if @minimum_password_length %>
      <em>(<%= t('devise.registrations.min_characters', length: @minimum_password_length) %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>

    <div class="mb6">
      <%= f.label :password_confirmation, class: "text-gray-700 font-bold mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit t('navigation.sign_up'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
